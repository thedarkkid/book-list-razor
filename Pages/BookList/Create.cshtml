@page
@model BookListRazor.Pages.BookList.CreateModel
@{
    ViewData["Title"] = "Create";
}


<h2 class="text-info mt-5 mb-5">Create New Book</h2>

<div class="border container p-4">
    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
        </div>
        <div class="offset-4 form-group row">
            <div class="col-3 list-inline-item">
                <input type="submit" value="Create" class="btn  btn-primary form-control" />
            </div>
            <div class="col-3 list-inline-item">
                <a asp-page="Index" class="btn  btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

